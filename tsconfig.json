{
	"compilerOptions": {
	  "target": "es2018",
	  "module": "commonjs",
	  "inlineSourceMap": true,
	  "strict": true,
      "outDir": "./dist",
      "baseUrl": "./",
	  "noImplicitAny": true,
	  "esModuleInterop": true,
	  "experimentalDecorators": true,
	  "emitDecoratorMetadata": true,
	  "strictPropertyInitialization": false,
	  "lib": ["esnext"],
	},
	"include": [
	  "src/**/**/*", "test/**/*", "migrations"
	]
}
